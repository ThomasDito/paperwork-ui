{
  "name": "paperwork-ui",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "build:ts": "swc ./src -D ./package.json -d ./dist",
    "build:dts": "tsc -d --declarationMap --emitDeclarationOnly",
    "build:css": "postcss ./src/index.min.css --dir ./dist",
    "build": "npm run build:ts && npm run build:css && npm run build:dts",
    "watch:css": "postcss ./src/index.min.css -o ./dist/index.min.css --watch",
    "watch:ts": "swc -w ./src -D ./package.json -d ./dist",
    "watch:dts": "tsc -w -d --declarationMap --emitDeclarationOnly",
    "watch": "concurrently -n swc,tsc,postcss \"npm run watch:ts\" \"npm run watch:dts\" \"npm run watch:css\"",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write src/",
    "tsc": "tsc --pretty --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-context-menu": "^2.1.4",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-hover-card": "^1.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-navigation-menu": "^1.1.3",
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^0.2.0",
    "formik": "^2.4.4",
    "lucide-react": "^0.274.0",
    "moment": "^2.29.4",
    "paperwork-utils": "file:../paperwork-utils/dist",
    "react": "^17 || ^18",
    "react-day-picker": "^8.8.1",
    "react-dom": "^17 || ^18",
    "react-hot-toast": "^2.4.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "formik": "^2.4.4",
    "lucide-react": "^0.274.0",
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.83",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "postcss": "^8.4.29",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "typescript": "^5.2.2"
  }
}